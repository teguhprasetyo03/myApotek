                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/mregular"
                    android:text=":"
                    android:textColor="@color/hitam"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/xid_obat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:text=""
